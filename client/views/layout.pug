doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="description" content="Play Reversi online, also known as Othello. A classic strategy board game for two players. Host a game and play with friends.")
        meta(name="viewport" content="width=device-width, initial-scale=0.8")
        base(href="/")
        title Reversi - Online Multiplayer
        link(rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico")
        link(href="/node_modules/lato-font/css/lato-font.min.css" rel="stylesheet")
        link(href=`/node_modules/bootstrap/dist/css/bootstrap.min.css?${timestamp}` rel="stylesheet")
        link(href=`/node_modules/@fortawesome/fontawesome-free/css/all.min.css?${timestamp}` rel="stylesheet")
        link(href=`/css/client.css?${timestamp}` rel="stylesheet")
    body
        block content

        script(type="text/javascript" src="https://connect.facebook.net/en_US/sdk.js")
        script(type="text/javascript" src="https://apis.google.com/js/platform.js")

        script(src=`/node_modules/pusher-js/dist/web/pusher.min.js?${timestamp}`)
        script(src=`/node_modules/@babel/polyfill/dist/polyfill.min.js?${timestamp}`)
        script(src=`/node_modules/zone.js/dist/zone.min.js?${timestamp}`)

        block scripts

