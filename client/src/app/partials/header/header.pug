.header
    .container
        .row
            .col-3
                .nav-btn-ctnr(routerLink="/", [ngClass]="{active: isPathActive('home')}")
                    .nav-btn
                        .fas.fa-home
                    p.title Home
            .col-3
                .center-left
                    .nav-btn-ctnr((click)="openAboutModal()")
                        .nav-btn
                            .fas.fa-question
                        p.title About
            .col-3
                .center-right
                    .nav-btn-ctnr
                        .nav-btn
                            .fas.fa-cog
                        p.title Settings
            .col-3
                .right
                    .nav-btn-ctnr
                        .nav-btn
                            .fas.fa-user
                        p.title Profile

ng-template(#aboutModal, let-c="close")
    .modal-body.about-modal
        .fas.fa-times((click)="c()")
        p.title About
        a.btn.btn-primary.how-to-play(href="https://en.wikipedia.org/wiki/Reversi#Rules" target="_blank" referrer="noreferrer") How to play
        p.created Created by Jordan Luyke
        a.btn.btn-primary.keybase(href="https://keybase.io/jordanluyke" target="_blank" referrer="noreferrer") Keybase